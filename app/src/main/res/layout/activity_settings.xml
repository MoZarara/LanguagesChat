                android:paddingRight="20dp" />-->



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/inputs"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/native_button_languages_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Native Language"
                    android:layout_weight="1"

                    />

                <TextView
                    android:id="@+id/native_text_languages_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:text="There is no language"
                    android:textSize="17sp"
                    android:textStyle="italic"
                    android:layout_weight="1"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/inputs"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/target_button_languages_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target Language"
                    android:layout_weight="1"

                    />

                <TextView
                    android:id="@+id/target_text_languages_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:text="There is no language"
                    android:textSize="17sp"
                    android:textStyle="italic"
                    android:layout_weight="1"/>

            </LinearLayout>


            <Button
                android:id="@+id/update_settings_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/buttons"
                android:inputType="textMultiLine"
                android:padding="6dp"
                android:text="@string/update"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>